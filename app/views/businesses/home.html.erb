<div class="container">
  <div class="cards">
    <div class="title">
      <h1>CATEGORIES</h1>
    </div>
    <div class="card-container">
      <div class="row">
        <% @categories.each do |category| %>
          <div class="col-xs-4 col-sm-3">
            <div class="category-card">
              <div class="category-image">
                <%= image_tag(category) %>
              </div>
              <div class="category-name">
                <%= category %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
