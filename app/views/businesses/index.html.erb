<div class="container">
  <div class="card-container">
    <div class="row">
      <div class="cards">
        <h2><%= @category.name %></h2>
        <% @businesses.each do |business| %>
          <%= link_to business_path(business) do %>
            <%= render 'cards', business: business %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
