<div class="row">
    <div class="col-xs-12 box">
        <div class="logo">
          <h1>Maid of Honor</h1>
          <h4>Your Personal Wedding Assistant!</h4>
        </div>

        <% if user_signed_in? %>
          <%= link_to categories_path do %>
            <button class="btn btn-light btn-home" style="color:white">
              Categories
            </button>
          <% end %>
        <% else %>
          <%= link_to new_user_session_path do %>
            <button class="btn btn-light btn-home" style="color:white">
              Log In
            </button>
          <% end %>
          <div class="sign-up">
          <p>Don't have an account yet? <%= link_to "Sign Up", new_user_registration_path %></p>
         </div>
      <% end %>
    </div>
</div>
